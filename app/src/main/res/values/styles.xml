<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Button Styles -->
    <style name="contentType" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/content_color</item>
        <item name="colorControlHighlight">@color/selected_green_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/selected_green_color</item>
    </style>

    <style name="SkipButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/background_app_color</item>
        <item name="colorControlHighlight">@color/skip_red_color</item>
    </style>

    <style name="categoryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/category_color</item>
        <item name="android:textColor">@color/background_app_color</item>
        <item name="colorControlHighlight">@color/ok_green_color</item>
    </style>

</resources>
